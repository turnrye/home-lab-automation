apiVersion: v1
kind: PersistentVolume
metadata:
  name: lidarr-3-pv
spec:
  capacity:
    storage: 10Gi
  accessModes:
    - ReadWriteOnce
  iscsi:
    targetPortal: 10.0.80.251:3260
    portals: ['10.0.80.251:3260']
    iqn: iqn.2005-10.org.freenas.ctl:iscsi-lidarr
    lun: 0
    fsType: ext4
    readOnly: true
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: lidarr-3-pvc
spec:
  # It's necessary to specify "" as the storageClassName
  # so that the default storage class won't be used, see
  # https://kubernetes.io/docs/concepts/storage/persistent-volumes/#class-1
  storageClassName: ""
  volumeName: lidarr-3-pv
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 10Gi
