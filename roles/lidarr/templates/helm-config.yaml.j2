image:
  tag: latest
  repository: linuxserver/lidarr
  pullPolicy: Always
persistence:
  config:
    enabled: true
    existingClaim: lidarr-3-pvc
  downloads:
    enabled: true
    existingClaim: nzbget-downloads-pvc
  movies:
    enabled: true
    existingClaim: plex-pvc
ingress:
  enabled: true
  hosts: 
    - lidarr.turnrye.com
  annotations: 
    kubernetes.io/ingress.class: nginx
    nginx.ingress.kubernetes.io/proxy-body-size: 10M
timezone: {{ timezone }}
puid: 0
pgid: 0
