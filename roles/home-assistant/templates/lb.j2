apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: ingress-plex
  annotations:
    # use the shared ingress-nginx
    kubernetes.io/ingress.class: "nginx"
spec:
  rules:
  - host: plex.turnrye.com
    http:
      paths:
      - path: /
        backend:
          serviceName: plex-kube-plex
          servicePort: pms
