apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: ingress-home-assistant
  annotations:
    # use the shared ingress-nginx
    kubernetes.io/ingress.class: "nginx"
spec:
  rules:
  - host: home.turnrye.com
    http:
      paths:
      - path: /
        backend:
          serviceName: home-assistant
          servicePort: 8123
